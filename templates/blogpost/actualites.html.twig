{% extends 'base.html.twig' %}

{% block title %}PaintLab | Actualites{% endblock %}

{% block body %}

{% include 'base/nav.html.twig' %} 
        
        <header class="site-navbar site-navbar-target" role="banner">

        <div class="container">
          <div class="row align-items-center position-relative">
            <div class="col-3 ">
              <div class="site-logo">
                <a href="/home">PaintLab</a>
              </div>
            </div>

            <div class="col-9  text-right">
              <span class="d-inline-block d-lg-none">
                <a href="#" class="text-white site-menu-toggle js-menu-toggle py-5 text-white">
                  <span class="icon-menu h3 text-white"></span>
                </a>
              </span>
              <nav class="site-navigation text-right ml-auto d-none d-lg-block" role="navigation">
                <ul class="site-menu main-menu js-clone-nav ml-auto ">
                  <li><a href={{"home"}} class="nav-link">Home</a></li>
                  <li><a href={{"realisations"}} class="nav-link">Peintures</a></li>
                  <li class="active"><a href={{"actualites"}} class="nav-link">Actualites</a></li>
                  <li><a href="" class="nav-link">About</a></li>
                  <li><a href="" class="nav-link">Blog</a></li>
                  <li><a href="" class="nav-link">Contact</a></li>
                </ul>
              </nav>
            </div>

            
          </div>
        </div>
      </header>

{% include 'home/welcome.html.twig' %} 
<div class="site-section bg-light">
  <div class="container">
    <div class="row">

    {% for blogpost in blogposts %}
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="post-entry-1 h-100">
          <a href="single.html">
            <img src={{blogpost.contenu}} alt="Image" class="img-fluid">
          </a>
          <div class="post-entry-1-contents">
            <h2><a href="single.html"> {{blogpost.titre}} </a></h2>
              <span class="mx-2">Slug : <a href="">{{blogpost.slug}} </a></span>
              <span class="meta d-inline-block mb-3"></span>
              <p>Date de Realisation : {{blogpost.getDate.format('d/m/Y')}}</p>
              <p>{{blogpost.contenu}}</p>
          </div>
        </div>
      </div>
      
    {% endfor %}
      <div class="col-12 mt-5 text-center">
        {% do blogposts.setPageRange(5) %}
        {{knp_pagination_render(blogposts, 'base/pagination.html.twig')}}
      </div>
